# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (use 'postgres' for Docker Compose, 'localhost' for local dev)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=userdb
POSTGRES_PORT=5432
DATABASE_URL=postgresql://user:password@localhost:5432/userdb

# Redis Configuration (use 'redis' for Docker Compose, 'localhost' for local dev)
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Admin Seed (for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminPass123!
ADMIN_FULL_NAME=System Administrator
ADMIN_DATE_OF_BIRTH=1990-01-01
