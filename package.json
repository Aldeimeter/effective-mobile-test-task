{
  "name": "effective-mobile-test-task",
  "version": "1.0.0",
  "description": "Effective mobile test task ",
  "license": "ISC",
  "author": "Artem Zaitsev",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --testPathIgnorePatterns=test/integration",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest test/integration",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "lint": "eslint src/ && eslint test/",
    "format": "prettier . --write",
    "prepare": "husky && husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.8.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "redis": "^5.8.3",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.12"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0"
    ],
    "*.{json,yml,yaml,mjs,cjs,md}": [
      "prettier --write"
    ]
  }
}
