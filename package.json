{
  "name": "effective-mobile-test-task",
  "version": "1.0.0",
  "description": "Effective mobile test task ",
  "license": "ISC",
  "author": "Artem Zaitsev",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "lint": "eslint src/ && eslint test/",
    "format": "prettier . --write",
    "prepare": "husky && husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings 0"
    ],
    "*.{json,yml,yaml,mjs,cjs}": [
      "prettier --write"
    ]
  }
}
